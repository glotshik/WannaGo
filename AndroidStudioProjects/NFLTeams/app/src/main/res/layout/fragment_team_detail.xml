    <ImageView
        android:id="@+id/team_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/patriots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/team_logo"
        app:layout_constraintTop_toTopOf="@id/team_logo"
        tools:text="New England Patriots" />

    <TextView
        android:id="@+id/team_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintStart_toStartOf="@id/team_logo"
        app:layout_constraintTop_toBottomOf="@id/team_logo"
        tools:text="AFC East" />

    <TextView
        android:id="@+id/stadium_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintStart_toStartOf="@id/team_logo"
        app:layout_constraintTop_toBottomOf="@id/team_division"
        tools:text="Gillette Stadium" />

    <!-- MapView will be added in a later version -->

</androidx.constraintlayout.widget.ConstraintLayout>